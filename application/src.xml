<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
<id>applicationclasses</id>
<formats>
<format>jar</format>
</formats>
<includeBaseDirectory>false</includeBaseDirectory>
<moduleSets>
<moduleSet>
    <useAllReactorProjects>true</useAllReactorProjects>
    <includes>
        <include>com.sap.cloud.s4hana.examples:address-manager-application:war</include>
    </includes>
    <sources>
        <includeModuleDirectory>false</includeModuleDirectory>
        <fileSets>
            <fileSet>
                <outputDirectory>commands</outputDirectory>

                <directory>
                    src/main/java/com/sap/cloud/s4hana/examples/addressmgr
                </directory>
                <excludes>
                    <exclude>*Servlet.java</exclude>
                    <exclude>config/**/*.*</exclude>
                    <exclude>datasource/**/*.*</exclude>
                    <exclude>models/**/*.*</exclude>
                    <exclude>util/**/*.*</exclude>
                    <exclude>views/**/*.*</exclude>
                    <exclude>webapp/**/*.*</exclude>
                </excludes>






            </fileSet>
        </fileSets>
    </sources>
</moduleSet>
</moduleSets>
</assembly>